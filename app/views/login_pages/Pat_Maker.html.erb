<!-- app/views/login_pages/Pat_Maker.html.erb -->
<%= stylesheet_link_tag 'login_signup', media: 'all', 'data-turbo-track': 'reload' %>

<%= form_with(model: @Pat_Maker, url: pattern_makers_create_session_path, method: :post, class: 'signup-form') do |form| %>
  <div class="form-group">
    <%= form.email_field :email, placeholder: 'Enter your email', name: 'pattern_maker[email]', class: 'form-input' %>
  </div>
  <div class="form-group">
    <%= form.password_field :password, placeholder: 'Enter your password', name: 'pattern_maker[password]', class: 'form-input' %>
  </div>
  <div>
    <%= form.submit 'Login', class: 'form-submit' %>
  </div>
  <div class="form-submit">
    <%= link_to 'Forgotten Password', forgot_path, class: 'form-submit' %>
  </div>
<% end %>


