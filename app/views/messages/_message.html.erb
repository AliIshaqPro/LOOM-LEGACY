<!-- app/views/messages/_message.html.erb -->
<% if message.user == current_user %>
  <p style="text-align: right; background-color: #e0f7fa; padding: 5px; margin: 5px; border-radius: 10px;">
    <%= message.body %> <br>
    <small><%= message.user.email %></small>
  </p>
<% else %>
  <p style="text-align: left; background-color: #f1f8e9; padding: 5px; margin: 5px; border-radius: 10px;">
    <%= message.body %> <br>
    <small><%= message.user.email %></small>
  </p>
<% end %>
