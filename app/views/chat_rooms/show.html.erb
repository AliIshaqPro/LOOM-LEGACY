<div id="chat-room-id" data-room-id="<%= @room.id %>"></div>
<div id="chat-box">
  <% @chat_messages.each do |message| %>
    <p><b><%= message.user.name %>:</b> <%= message.content %></p>
  <% end %>
</div>

<form id="chat-form" data-user-id="<%= current_user.id %>">
  <input type="text" id="chat-input" placeholder="Type your message..." />
  <button type="submit">Send</button>
</form>
