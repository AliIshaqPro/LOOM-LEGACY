<h1>Complete Your Profile</h1>

<%= form_with model: @user, url: update_user_info_path, method: :patch, local: true do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username, required: true %>
  </div>

  <div>
    <%= f.label :date_of_birth %>
    <%= f.date_select :date_of_birth, start_year: 1900, end_year: Date.today.year %>
  </div>

  <div>
    <%= f.label :full_name %>
    <%= f.text_field :full_name, required: true %>
  </div>

  <div>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
  </div>

  <div>
    <%= f.label :profile_picture %>
    <%= f.file_field :profile_picture %>
  </div>

  <div>
    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number, required: true %>
  </div>

  <div>
    <%= f.submit 'Save Information' %>
  </div>
<% end %>
