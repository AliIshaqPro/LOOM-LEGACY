<%= stylesheet_link_tag 'login_signup', media: 'all', 'data-turbo-track': 'reload' %>
<div class="form-container">
  <h1>Complete Your Profile</h1>

  <%= form_with model: @user, url: update_user_info_path, method: :patch, local: true do |f| %>
    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username, required: true %>
    </div>

    <div class="field">
      <%= f.label :date_of_birth %>
      <%= f.date_select :date_of_birth, start_year: 1900, end_year: Date.today.year %>
    </div>

    <div class="field">
      <%= f.label :full_name %>
      <%= f.text_field :full_name, required: true %>
    </div>

    <div class="field">
      <%= f.label :bio %>
      <%= f.text_area :bio %>
    </div>

    <div class="field">
      <%= f.label :phone_number %>
      <%= f.telephone_field :phone_number, required: true %>
    </div>

    <div class="actions">
      <%= f.submit 'Save Information' %>
    </div>
  <% end %>
</div>
