<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ali Ishaq 3D Sphere</title>
  <style>
    /* Basic styling for the content and container */
    body, html {
      margin: 0;
      padding: 0;
      height: 100%;
      font-family: Arial, sans-serif;
      background-color: #000; /* Black background */
      overflow-y: auto;
    }

    .parallax {
      display: flex;
      justify-content: center;
      align-items: center;
      
      width:100%;
      z-index: 2; /* Ensure this is on top of the 3D scene */
      position: relative; /* To position the content on top */
    }

    .content {
      background-color:transparent;
      
      width: 100%;
      border-radius: 10px;
      text-align: center;
      z-index: 3; /* Ensure content is above the sphere */
      position: relative; /* To ensure proper stacking */
    }

    h1 {
      font-size: 36px;
      color: #333;
      margin-bottom: 30px;
    }

    .card {
      background-color: #fff;
      padding: 20px;
      margin-top: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
    }

    /* Container background styling */
.form-background {
  height: 100vh;
  background-color: black;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Form container styling */
.form-container {
  width: 100%;
  max-width: 1000px;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  overflow-y: auto;
  max-height: 100vh;
}

/* Form title styling */
.form-title {
  font-size: 24px;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20px;
  text-align: center;
}

/* Form label styling */
.form-label {
  color: rgba(255, 255, 255, 0.9);
}

/* Form control styling */
.form-control {
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.9);
}

/* Submit button styling */
.btn-primary {
  background: rgba(0, 123, 255, 0.7);
  border: none;
  color: rgba(255, 255, 255, 0.9);
}
.container-fluid {
  width: 70%; /* Set width to 70% of the viewport */
  max-width: 100%; /* Ensure it doesn't exceed viewport width */
 /* Optional: Remove padding if not needed */
}


    #threejs-container {
      position: fixed; /* Ensures it stays in place */
      background-color: black;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      z-index: 1; /* Sphere behind the content */
    }
  </style>
</head>
<body>
  <!-- Container for the Three.js scene -->
  <div id="threejs-container"></div>
  
  <!-- Content on top of the 3D sphere -->
  <div class="parallax">
    <div class="content">
      <p class="fs-1" style="color:white;">Welcome to Chatsphere</p><br>
<p class="fs-3" style="color:white;">Thank You So Much For Choosing Chatsphere </p><br>
<p class="fs-4" style="color:white;">We Would Be Glad To Get Some Of Your Personal Information For Best User Experience </p><br>
<div class="container-fluid d-flex justify-content-center align-items-center">
  <div class="form-container">
    <h1 class="form-title">Complete Your Profile</h1>

    <%= form_with model: @user, url: update_user_info_path, method: :patch, local: true, class: "form" do |f| %>
      <div class="mb-3">
        <%= f.label :username, class: "form-label" %>
        <%= f.text_field :username, required: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :date_of_birth, class: "form-label" %>
        <%= f.date_select :date_of_birth, start_year: 1900, end_year: Date.today.year, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :full_name, class: "form-label" %>
        <%= f.text_field :full_name, required: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :bio, class: "form-label" %>
        <%= f.text_area :bio, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :phone_number, class: "form-label" %>
        <%= f.telephone_field :phone_number, required: true, class: "form-control" %>
      </div>

      <div class="text-center">
        <%= f.submit 'Save Information', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>


    </div>
  </div>

  <!-- Three.js CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
  
  <script>
    // Create the scene, camera, and renderer
    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
    const renderer = new THREE.WebGLRenderer();

    // Add the renderer's canvas to the container
    renderer.setSize(window.innerWidth, window.innerHeight);
    document.getElementById('threejs-container').appendChild(renderer.domElement);

    // Create a geometry (sphere) and add it to the scene
    const geometry = new THREE.SphereGeometry(1, 32, 32); // radius, width segments, height segments
    const material = new THREE.MeshBasicMaterial({ color: 0x007bff, wireframe: true });
    const sphere = new THREE.Mesh(geometry, material);
    scene.add(sphere);

    camera.position.z = 1.2; // Set the camera position

    // Animate the sphere
    const animate = function () {
      requestAnimationFrame(animate);

      sphere.rotation.x += 0.01;
      sphere.rotation.y += 0.01;

      renderer.render(scene, camera);
    };

    animate(); // Start the animation loop

    // Adjust the scene when the window is resized
    window.addEventListener('resize', () => {
      const width = window.innerWidth;
      const height = window.innerHeight;
      renderer.setSize(width, height);
      camera.aspect = width / height;
      camera.updateProjectionMatrix();
    });
  </script>
</body>
</html>
